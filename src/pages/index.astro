---
import Button from "@/components/Button.astro";
import Logo from "@/components/Logo.tsx";
import BaseLayout from "@/layouts/BaseLayout.astro";
import { SITE } from "@/consts";
import { basics } from "@cv";
const { name, label, summary, socials } = basics;
---

<BaseLayout title="Home" description={SITE.DESCRIPTION}>
  <section class="h-full">
    <div class="flex h-full items-center justify-center">
      <div class="container mx-auto my-24 xl:my-0">
        <div class="flex flex-col items-center justify-between xl:flex-row">
          <div class="order-2 text-center xl:order-none xl:text-left">
            <span class="text-xl">Hi, my name is</span>
            <h1 class="mb-6">
              {name}
            </h1>
            <div class="mb-8 flex max-w-[500px] flex-col gap-2">
              <p class="text-black/80 dark:text-white/80">
                {label}
              </p>
              <p class="text-black/80 dark:text-white/80">
                {summary}
              </p>
            </div>
            <div
              class="flex flex-row items-center justify-center gap-6 xl:justify-start"
            >
              {
                socials.map((item) => (
                  <Button
                    icon={item.network}
                    href={item.url}
                    label="Social Media Link"
                  />
                ))
              }
            </div>
          </div>
          <div class="order-1 mb-8 xl:order-none xl:mb-0">
            <Logo
              client:load
              lightSrc="/assets/logo-light.svg"
              darkSrc="/assets/logo-dark.svg"
              alt={name}
            />
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
